{
    "name": "jeremytubbs/deepzoom",
    "description": "Deepzoom Tile Generator for OpenSeadragon",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Tubbs",
            "email": "jeremytubbs@gmail.com",
            "homepage": "https://jeremytubbs.com"
        }
    ],
    "keywords": [
        "openseadragon",
        "deepzoom",
        "dzi",
        "zoom",
        "zoomable",
        "tiled",
        "intervention",
        "image",
        "gd",
        "imagemagick",
        "imagick",
        "flysystem"
    ],
    "autoload": {
        "psr-4": {
            "Jeremytubbs\\Deepzoom\\": "src/"
        }
    },
    "require": {
        "php": "^8.0.2",
        "intervention/image": "^2.7.2",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "larapack/dd": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --coverage-html coverage"
        ],
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
